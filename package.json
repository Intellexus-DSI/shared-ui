{
    "name": "@intellexus/shared-ui",
    "version": "1.0.0",
    "description": "Shared UI components for Intellexus applications",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Intellexus-DSI/shared-ui.git"
    },
    "scripts": {
        "build": "tsc && npm run copy-assets",
        "copy-assets": "copyfiles -u 1 \"src/**/*.css\" \"src/**/*.png\" dist",
        "prepare": "npm run build"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-bootstrap": "^2.0.0",
        "react-dom": "^18.0.0 || ^19.0.0",
        "react-router-dom": "^6.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "copyfiles": "^2.4.1",
        "typescript": "^4.9.0"
    },
    "files": [
        "dist",
        "src/styles",
        "src/assets"
    ]
}